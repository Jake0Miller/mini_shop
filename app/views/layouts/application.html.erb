<!DOCTYPE html>
<html>
  <head>
    <title>MiniShop</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag "https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" %>
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <section class='nav-1'>
      <section class='nav-group'>
        <section role="group" class="btn-group">
          <%= button_to "Merchants", merchants_path, method: :get, class: 'nav-btn' %>
        </section>
        <section role="group" class="btn-group">
          <%= button_to "Items", items_path, method: :get, class: 'nav-btn' %>
        </section>
      </section>
    </section>
    <br/>
    <%= yield %>
  </body>
</html>
