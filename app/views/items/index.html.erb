<h1 class='title'>
  All Items
  <% unless @merchant.nil? %>
    for
    <%= link_to @merchant.name, merchant_path(@merchant) %>
  <% end %>
</h1>

<% @items.each do |item| %>
  <section id='item-<%= item.id %>' class='item'>
    <h2><%= link_to item.name, item_path(item) %></h2>
    <%= render partial: 'item_details', locals: {item: item} %>
    <p id='merchant'><% if @merchant.nil? %>
      <%= link_to "Merchant: #{item.merchant.name}", merchant_path(item.merchant) %>
    <% end %></p>
  </section>
<% end %>

<section class='bottom_link'>
  <% unless @merchant.nil? %>
    <%= button_to 'Add Item', new_item_path, method: :get %>
  <% end %>
</section>
