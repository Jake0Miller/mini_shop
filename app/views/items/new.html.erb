<h1 class='title'>New Item</h1>

<%= form_tag(new_merchant_item_path) do %>
  <%= label_tag :name %>
  <%= text_field_tag :name %><br/>
  <br/>
  <%= label_tag :description %>
  <%= text_field_tag :description %><br/>
  <br/>
  <%= label_tag :price %>
  <%= number_field_tag :price %><br/>
  <br/>
  <%= label_tag :image %>
  <%= text_field_tag :image %><br/>
  <br/>
  <%= label_tag :active %>
  <%= text_field_tag :active %></br>
  <br/>
  <%= label_tag :inventory %>
  <%= number_field_tag :inventory %></br>
  <br/>
  <%= submit_tag("Submit") %>
<% end %>
