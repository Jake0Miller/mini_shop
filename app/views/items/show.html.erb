<h1 class='title'><%= @item.name %></h1>

<p id='description' class='info'><%= "Description: #{@item.description}" %></p>
<p id='price' class='info'><%= "Price: #{@item.price}" %></p>
<p id='image' class='info'><%= "Image: #{@item.image}" %></p>
<p id='active' class='info'><%= "Active: #{@item.active}" %></p>
<p id='inventory' class='info'><%= "Inventory: #{@item.inventory}" %></p>
<p id='merchant' class='info'><%= "Merchant: #{@item.merchant.name}" %></p>

<p class='bottom_link'>
  <%= link_to 'Edit', edit_item_path(@item) %>
  <%= link_to 'Delete', delete_item_path(@item), method: :delete %>
</p>
