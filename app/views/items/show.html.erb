<% item = @item %>
<h1 class='title'><%= @item.name %></h1>

<%= render partial: 'item_details', locals: {item: item} %>
<p id='merchant' class='info'><%= "Merchant: #{@item.merchant.name}" %></p>

<p class='bottom_link'>
  <%= link_to 'Edit', edit_item_path %>
  <%= link_to 'Delete', delete_item_path, method: :delete %>
</p>
